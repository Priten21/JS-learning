<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>URL Shortener</title>

  <style>
    body {
      background-color: #0f172a; /* dark slate */
      color: #e5e7eb;
      font-family: Arial, sans-serif;
      padding: 30px;
    }

    .container {
      max-width: 900px;
      margin: auto;
    }

    .top-bar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }

    h1 {
      margin: 0;
      font-size: 24px;
    }

    button {
      background-color: #2563eb;
      color: white;
      border: none;
      padding: 8px 14px;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #1d4ed8;
    }

    input {
      padding: 8px;
      width: 300px;
      border-radius: 5px;
      border: none;
      margin-right: 10px;
    }

    form {
      margin-bottom: 20px;
    }

    hr {
      border: 1px solid #334155;
      margin: 25px 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background-color: #020617;
    }

    th, td {
      border: 1px solid #334155;
      padding: 10px;
      text-align: left;
    }

    th {
      background-color: #1e293b;
    }

    a {
      color: #38bdf8;
      text-decoration: none;
    }

    a:hover {
      text-decoration: underline;
    }

    .empty {
      color: #94a3b8;
      margin-top: 15px;
    }
  </style>
</head>

<body>
  <div class="container">

    <!-- Top bar -->
    <div class="top-bar">
      <h1>Welcome, <%= user.name %></h1>

      <form method="POST" action="/auth/logout">
        <button type="submit">Logout</button>
      </form>
    </div>

    <!-- URL form -->
    <form method="POST" action="/url">
      <input
        type="text"
        name="url"
        placeholder="https://example.com"
        required
      />
      <button type="submit">Generate</button>
    </form>

    <hr />

    <!-- URLs table -->
    <% if (urls && urls.length > 0) { %>
      <table>
        <thead>
          <tr>
            <th>#</th>
            <th>Short URL</th>
            <th>Original URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% urls.forEach((u, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <a href="/url/<%= u.shortId %>" target="_blank">
                  <%= u.shortId %>
                </a>
              </td>
              <td><%= u.redirectURL %></td>
              <td><%= u.visitHistory.length %></td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } else { %>
      <p class="empty">No URLs yet. Start by shortening one above.</p>
    <% } %>

  </div>
</body>
</html>
